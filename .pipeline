pipeline {
    agent any

    environment {
        AWS_REGION = 'ap-south-1'
        IMAGE_NAME = 'springboot-podman-demo'
        ECR_REGISTRY = "699900816119.dkr.ecr.${AWS_REGION}.amazonaws.com"
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'üì• Cloning source code from GitHub...'
                git branch: 'main', url: 'https://github.com/nanirakesh/springboot-podman-demo.git'
            }
        }

        stage('Build Jar') {
            steps {
                echo '‚öôÔ∏è Building the Spring Boot application JAR...'
                sh 'mvn clean package -DskipTests'
                echo '‚úÖ JAR build completed successfully.'
            }
        }

        stage('Auto Version Tagging') {
            steps {
                script {
                    env.IMAGE_TAG = "2.0.${env.BUILD_NUMBER}"
                    echo "üè∑ Using version tag: ${env.IMAGE_TAG}"
                }
            }
        }

        stage('Build Image with Podman') {
            steps {
                echo 'üê≥ Building container image using Podman (Amazon Corretto 17 base)...'
                sh '''
                    podman build -t ${ECR_REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG} -f Dockerfile .
                    podman images | grep ${IMAGE_NAME}
                '''
            }
        }

        stage('Authenticate with AWS ECR') {
            steps {
                echo 'üîê Authenticating Podman with AWS ECR...'
                withCredentials([usernamePassword(credentialsId: 'aws-creds', usernameVariable: 'AWS_ACCESS_KEY_ID', passwordVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    sh '''
                        mkdir -p ~/.aws

                        echo "[default]" > ~/.aws/credentials
                        echo "aws_access_key_id = $AWS_ACCESS_KEY_ID" >> ~/.aws/credentials
                        echo "aws_secret_access_key = $AWS_SECRET_ACCESS_KEY" >> ~/.aws/credentials
                        echo "region = ${AWS_REGION}" >> ~/.aws/credentials

                        echo "‚úÖ AWS credentials configured."
                        echo "üîë Logging into AWS ECR..."
                        aws ecr get-login-password --region ${AWS_REGION} | podman login --username AWS --password-stdin ${ECR_REGISTRY}
                    '''
                }
            }
        }

        stage('Push to AWS ECR') {
            steps {
                echo 'üöÄ Pushing built image to AWS ECR...'
                sh '''
                    podman push ${ECR_REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG}
                '''
            }
        }

        stage('Clean Up Local Images') {
            steps {
                echo 'üßπ Cleaning up local images...'
                sh '''
                    podman rmi ${ECR_REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG} || true
                '''
            }
        }
    }

    post {
        success {
            echo "‚úÖ Pipeline executed successfully. Image pushed to ECR with tag ${IMAGE_TAG}."
        }
        failure {
            echo '‚ùå Pipeline failed. Check logs above for details.'
        }
    }
}
