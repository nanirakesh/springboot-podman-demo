pipeline {
    agent any

    environment {
        IMAGE_NAME = "699900816119.dkr.ecr.ap-south-1.amazonaws.com/springboot-podman-demo:2.0.0"
        AWS_REGION = "ap-south-1"
    }

    stages {
        stage('Checkout') {
            steps {
                echo "Cloning source code from GitHub..."
                git branch: 'main', url: 'https://github.com/nanirakesh/springboot-podman-demo.git'
            }
        }

        stage('Build Jar') {
            steps {
                echo "Building the Spring Boot application JAR..."
                sh 'mvn clean package -DskipTests'
                echo "JAR build completed successfully."
            }
        }

        stage('Build Image with Podman') {
            steps {
                echo "Building container image with Podman (using Amazon Corretto 17)..."
                sh '''
                    podman build -t ${IMAGE_NAME} -f Dockerfile .
                '''
            }
        }

        stage('Authenticate with AWS ECR') {
            steps {
                echo "Authenticating Podman with AWS ECR..."
                sh '''
                    aws ecr get-login-password --region ${AWS_REGION} | podman login --username AWS --password-stdin 699900816119.dkr.ecr.ap-south-1.amazonaws.com
                '''
            }
        }

        stage('Push to AWS ECR') {
            steps {
                echo "Pushing image to AWS ECR..."
                sh 'podman push ${IMAGE_NAME}'
            }
        }
    }

    post {
        success {
            echo "✅ Pipeline executed successfully. Image pushed to ECR."
        }
        failure {
            echo "❌ Pipeline failed. Check logs above for errors."
        }
    }
}
