pipeline {
    agent any

    environment {
        AWS_REGION = 'ap-south-1'
        ECR_REPO = '699900816119.dkr.ecr.ap-south-1.amazonaws.com/springboot-podman-demo'
        IMAGE_TAG = '2.0.0'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/nanirakesh/springboot-podman-demo.git'
            }
        }

        stage('Build Image with Podman') {
            steps {
                sh '''
                podman build -t $ECR_REPO:$IMAGE_TAG .
                podman images
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh 'podman run --rm $ECR_REPO:$IMAGE_TAG'
            }
        }

        stage('Push to ECR') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'aws-ecr', passwordVariable: 'AWS_SECRET', usernameVariable: 'AWS_USER')]) {
                    sh '''
                    aws ecr get-login-password --region $AWS_REGION | \
                    podman login --username AWS --password-stdin $ECR_REPO
                    podman push $ECR_REPO:$IMAGE_TAG
                    '''
                }
            }
        }
    }
}
