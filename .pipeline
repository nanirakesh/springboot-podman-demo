pipeline {
    agent any

    environment {
        AWS_REGION = 'ap-south-1'
        IMAGE_NAME = 'springboot-podman-demo'
        ECR_REGISTRY = "699900816119.dkr.ecr.${AWS_REGION}.amazonaws.com"
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Cloning source code from GitHub...'
                git branch: 'main', url: 'https://github.com/nanirakesh/springboot-podman-demo.git'
            }
        }

        stage('Build Jar') {
            steps {
                echo 'âš™ï¸ Building the Spring Boot application JAR...'
                sh 'mvn clean package -DskipTests'
                echo 'âœ… JAR build completed successfully.'
            }
        }

        stage('Auto Version Tagging') {
            steps {
                script {
                    // Automatically bump image version for each build
                    def buildNumber = env.BUILD_NUMBER
                    env.IMAGE_TAG = "2.0.${buildNumber}"
                    echo "ğŸ· Using version tag: ${env.IMAGE_TAG}"
                }
            }
        }

        stage('Build Image with Podman') {
            steps {
                echo 'ğŸ³ Building container image using Podman (Amazon Corretto 17 base)...'
                sh '''
                    podman build -t ${ECR_REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG} -f Dockerfile .
                    podman images | grep ${IMAGE_NAME}
                '''
            }
        }

        stage('Authenticate with AWS ECR') {
            steps {
                echo 'ğŸ” Authenticating Podman with AWS ECR...'
                withCredentials([usernamePassword(credentialsId: 'aws-creds', usernameVariable: 'AWS_ACCESS_KEY_ID', passwordVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    sh '''
                        mkdir -p ~/.aws
                        cat > ~/.aws/credentials <<EOF
                        [default]
                        aws_access_key_id = $AWS_ACCESS_KEY_ID
                        aws_secret_access_key = $AWS_SECRET_ACCESS_KEY
                        region = ${AWS_REGION}
                        EOF

                        echo "âœ… AWS credentials configured. Logging into ECR..."
                        aws ecr get-login-password --region ${AWS_REGION} | podman login --username AWS --password-stdin ${ECR_REGISTRY}
                    '''
                }
            }
        }

        stage('Push to AWS ECR') {
            steps {
                echo 'ğŸš€ Pushing built image to AWS ECR...'
                sh '''
                    podman push ${ECR_REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG}
                '''
            }
        }

        stage('Clean Up Local Images') {
            steps {
                echo 'ğŸ§¹ Cleaning up local images to save space...'
                sh '''
                    podman rmi ${ECR_REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG} || true
                '''
            }
        }
    }

    post {
        success {
            echo "âœ… Pipeline executed successfully. Image pushed to ECR with tag ${IMAGE_TAG}."
        }
        failure {
            echo 'âŒ Pipeline failed. Check logs above for details.'
        }
    }
}
